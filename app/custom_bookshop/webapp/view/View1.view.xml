	<FlexBox id="_IDGenFlexBox" direction="Row" justifyContent="SpaceBetween" alignItems="Center" class="sapUiSmallMargin">

		<VBox id="_IDGenVBox10" class="sapUiSmallMargin">
			<HBox id="_IDGenHBox5" renderType="Bare" class="sapUiSmallMarginBottom">
				<Text id="_IDGenText115" text="BookStore" class="bookstoreBlue inlineText"></Text>
			<Text id="_IDGenText116" text="X" class="bookstoreBlack inlineText"></Text>
			</HBox>
			<Text id="_IDGenText13" text="Discover the Next Chapter of You!" class="bookstoreHeading" wrapping="true"></Text>
			<Text id="_IDGenText14" text="Where You Can Browse, Buy, and Read Books in Minutes" class="sapUiSmallMarginBottom" wrapping="true"></Text>
			<HBox id="_IDGenHBox3" class="sapUiSmallMarginTop">
				<Input id="_IDGenInput" placeholder="Search By Author, Title..." width="250px"></Input>
				<Button id="_IDGenButton4" text="Search" type="Emphasized" class="sapUiTinyMarginBegin"></Button>
			</HBox>
		</VBox>

		<VBox id="_IDGenVBox12" width="50%" alignItems="Center">
			<Image id="_IDGenImage1" src="img/headerimg.jpg" width="85%" decorative="true" densityAware="false" />
		</VBox>
	</FlexBox>

	<!-- Subscription section -->

	<FlexBox id="_IDGenFlexBox1" direction="Row" justifyContent="SpaceBetween" alignItems="Center" class="subscribeBox sapUiMediumMarginTop" >
		<Image id="_IDGenImage3" src ="img/subsimg.jpg" width="55%"/>
		<VBox id="_IDGenVBox9" width="55%" class="sapUiSmallMargin"  >
			<Text id="_IDGenText16" text="Subscribe Now &amp; Get 30% Off On Your First Order" class="subscribeHeading" wrapping="true"></Text>
			<HBox id="_IDGenHBox6" class="sapUiSmallMarginTop">
				<Input id="_IDGenInput1" placeholder="Enter Your Email Address" width="250px" class="subscribeInput"></Input>
				<Button id="_IDGenButton8" text="Subscribe" type="Emphasized" class="subscribeBtn sapUiTinyMarginBegin"> </Button>
			</HBox>
		</VBox>
	 </FlexBox>
</Panel>
    </VBox>
</HBox>
	<footer>
    <Bar id="_IDGenBar1" >
        <contentMiddle>
            <Text id="_IDGenText17" text="Copyright © BookStoreX"/>
        </contentMiddle>
        <contentRight>
             <Text id="_IDGenText18" text="Developed by Sujit Mahapatra" />
        </contentRight>
    </Bar>
    </footer>
    </Page>
</mvc:View>