<mvc:View controllerName="custombookshop.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns:tnt="sap.tnt"
    xmlns="sap.m">
    <Page id="page" title="{i18n>title}">

    <!-- Header Section -->
    		<tnt:ToolHeader id="shellLikeToolHeader" class="sapUiTinyMargin">
			<Button id="_IDGenButton" icon="sap-icon://menu2" type="Transparent" tooltip="Menu" press=".onCollapseExpandPress">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData" priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<Image id="_IDGenImage" src="test-resources/sap/tnt/images/SAP_Logo.png" decorative="false" press="onLogoPressed" tooltip="SAP Logo" width="60px" height="30px">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData1" priority="NeverOverflow"/>
				</layoutData>
			</Image>
			<Title text="BookStoreX" wrapping="false" id="productName">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData2" priority="Disappear"/>
				</layoutData>
			</Title>
			<Text text="Inventory Simplified" wrapping="false" id="secondTitle" class="smallText">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData3" priority="Disappear"/>
				</layoutData>
			</Text>
			<ToolbarSpacer id="_IDGenToolbarSpacer" />
			<SearchField width="25rem" id="searchField">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData4" priority="Low" group="1"/>
				</layoutData>
			</SearchField>
			<Button visible="false" icon="sap-icon://search" type="Transparent" id="searchButton" tooltip="Search"/>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton" icon="sap-icon://da" type="Transparent" tooltip="Joule" text="Joule">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData5" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton1" icon="sap-icon://source-code" type="Transparent" tooltip="Action 1" text="Action 1">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData6" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton2" icon="sap-icon://card" type="Transparent" tooltip="Action 2" text="Action 2">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData7" group="2"/>
				</layoutData>
			</OverflowToolbarButton>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton3" icon="sap-icon://action-settings" type="Transparent" text="Settings"/>
			<Button id="_IDGenButton2" icon="sap-icon://bell" type="Transparent" tooltip="Notification">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData8" priority="NeverOverflow"/>
				</layoutData>
			</Button>
			<tnt:ToolHeaderUtilitySeparator id="_IDGenToolHeaderUtilitySeparator1"/>
			<OverflowToolbarButton id="_IDGenOverflowToolbarButton4" icon="sap-icon://grid" type="Transparent" text="My Products" tooltip="My Products"/>
			<Avatar id="_IDGenAvatar" src="test-resources/sap/tnt/images/Woman_avatar_01.png" displaySize="XS" press=".onAvatarPressed" tooltip="Profile">
				<layoutData>
					<OverflowToolbarLayoutData id="_IDGenOverflowToolbarLayoutData9" priority="NeverOverflow"/>
				</layoutData>
			</Avatar>
		</tnt:ToolHeader>

        <!-- Side Navigation -->
<HBox id="_IDGenHBox4" >
    <VBox id="_IDGenVBox7" >
        <tnt:SideNavigation id="sideNavigation" selectedKey="walked" expanded="true">
			<tnt:NavigationList id="_IDGenNavigationList">
				<tnt:NavigationListItem id="_IDGenNavigationListItem1" text="Home" icon="sap-icon://home" press="onHomePressed" />
				<tnt:NavigationListGroup id="_IDGenNavigationListGroup" text="Manage">
					<tnt:NavigationListItem id="_IDGenNavigationListItem2" text="Add Books" icon="sap-icon://people-connected" press=".onAddBookPressed" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem80" text="Edit Books" icon="sap-icon://edit" press="onViewDetailsBookPressed" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem3" text="Categories" icon="sap-icon://tags" >
						<tnt:NavigationListItem id="_IDGenNavigationListItem4" text="Fiction" />
						<tnt:NavigationListItem id="_IDGenNavigationListItem5" text="Science" />
						<tnt:NavigationListItem id="_IDGenNavigationListItem50" text="History" />
					</tnt:NavigationListItem>
				</tnt:NavigationListGroup>
				<tnt:NavigationListGroup id="_IDGenNavigationListGroup1" text="Recently used">
					<tnt:NavigationListItem id="_IDGenNavigationListItem8" text="View Books" icon="sap-icon://education" press="onViewDetailsBookPressed" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem9" text="Authors" icon="sap-icon://employee" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem10" text="Categories" icon="sap-icon://tags" />
				</tnt:NavigationListGroup>
				<tnt:NavigationListGroup id="_IDGenNavigationListGroup2" text="Admin Panel" enabled="false">
					<tnt:NavigationListItem id="_IDGenNavigationListItem11" text="Purchase History" icon="sap-icon://cart" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem12" text="Out of Stocks" icon="sap-icon://decline" />
				</tnt:NavigationListGroup>
				<tnt:NavigationListItem id="_IDGenNavigationListItem13" text="Sales Report" icon="sap-icon://business-objects-experience" />
			</tnt:NavigationList>
			<tnt:fixedItem>
				<tnt:NavigationList id="_IDGenNavigationList1">
					<tnt:NavigationListItem id="_IDGenNavigationListItem15" selectable="false" href="https://sap.com" target="_blank" text="External Reviews" icon="sap-icon://attachment" />
					<tnt:NavigationListItem id="_IDGenNavigationListItem17" text="Compare Books" icon="sap-icon://compare" />
				</tnt:NavigationList>
			</tnt:fixedItem>
		</tnt:SideNavigation>
    </VBox>

	<!-- Sidebar End -->
  
    <VBox id="_IDGenVBox8" >

    <!-- Starting Panel 1 -->

    <Panel id="Panel1" width="60rem" class="sapUiResponsiveMargin" accessibleRole="Region" visible="false">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar">
				<Title id="_IDGenTitle" text="Add New Item"/>
			</OverflowToolbar>
		</headerToolbar>

		<Breadcrumbs id="_IDGenBreadcrumbs" currentLocationText="Add New Item">
			<Link id="_IDGenLink" text="Master"></Link>
		</Breadcrumbs>

			<HBox id="_IDGenHBox" >
				<VBox id="_IDGenVBox1">
					<Label id="_IDGenLabel2" text="Title"></Label>
					<Input id="title" placeholder="Enter Book Title"></Input>
				</VBox>
				<VBox id="_IDGenVBox2">
					<Label id="_IDGenLabel3" text="Author"></Label>
					<Input id="author" placeholder="Enter Author Name"></Input>
				</VBox>
				<VBox id="_IDGenVBox3">
					<Label id="_IDGenLabel4" text="Price"></Label>
					<Input id="price" placeholder="Enter Book price"></Input>
				</VBox>
				</HBox>
				<HBox id="_IDGenHBox1">
				<VBox id="_IDGenVBox4">
					<Label id="_IDGenLabel5" text="Stock"></Label>
					<Input id="stock" placeholder="Enter Available Stock"></Input>
				</VBox>
				<VBox id="_IDGenVBox5">
					<Label id="_IDGenLabel6" text="Location"></Label>
					<Input id="location" placeholder="Enter Book location"></Input>
				</VBox>
				<VBox id="_IDGenVBox6">
					<Label id="_IDGenLabel7" text="Genre"></Label>
					<Input id="genre" placeholder="Enter Genre"></Input>
				</VBox>
			</HBox>

			<HBox id="_IDGenHBox2">
				<VBox id="_IDGenVBox" >
					<Button id="_IDGenButton1" text="Submit" press="submit" ></Button>
				</VBox>
			</HBox>
    </Panel>

	<!-- Ending Panel 1 -->

	<!-- Starting Panel 2 -->

    <Panel id="Panel2" class="sapUiResponsiveMargin" headerText="Book Details" visible="false">
        <!-- Books Details table -->

        <Table id="booksTable" items="{/Books}">
            <columns>
                <Column id="_IDGenColumn" >
                    <Text id="_IDGenText" text="Title"></Text>
                </Column>
                <Column id="_IDGenColumn1" >
                    <Text id="_IDGenText1" text="Author"></Text>
                </Column>
                <Column id="_IDGenColumn2" >
                    <Text id="_IDGenText2" text="Price"></Text>
                </Column>
                <Column id="_IDGenColumn3" >
                    <Text id="_IDGenText3" text="Stock"></Text>
                </Column>
                <Column id="_IDGenColumn4" >
                    <Text id="_IDGenText4" text="Location"></Text>
                </Column>
                <Column id="_IDGenColumn5" >
                    <Text id="_IDGenText5" text="Genre"></Text>
                </Column>
                <Column id="_IDGenColumn7" >
                    <Text id="_IDGenText12" text="Action"></Text>
                </Column>
            </columns>
            <items>
                <ColumnListItem id="_IDGenColumnListItem1" >
                    <cells>
                        <Text id="_IDGenText6" text="{title}"></Text>
                        <Text id="_IDGenText7" text="{author}"></Text>
                        <Text id="_IDGenText8" text="{price}"></Text>
                        <Text id="_IDGenText9" text="{stock}"></Text>
                        <Text id="_IDGenText10" text="{location}"></Text>
                        <Text id="_IDGenText11" text="{genre}"></Text>

                        <Button id="_IDGenButton3" text="..." press="onActionPressed($event)"></Button>
                    </cells>
                </ColumnListItem>
            </items>
        </Table>
    </Panel>

	<!-- Ending Panel 2 -->

	<!-- Starting Panel 3 -->

    <Panel id="Panel3" width="60rem" class="sapUiResponsiveMargin" accessibleRole="Region" visible="false">
		<headerToolbar>
			<OverflowToolbar id="_IDGenOverflowToolbar1">
				<Title id="_IDGenTitle1" text="Update Items"/>
			</OverflowToolbar>
		</headerToolbar>

		<Breadcrumbs id="_IDGenBreadcrumbs1" currentLocationText="Edit Books">
			<Link id="_IDGenLink1" text="Master"></Link>
		</Breadcrumbs>

			<HBox id="_IDGenHBox111" >

				<VBox id="_IDVBox1">
					<Label id="_IDGabel21" text="ID"></Label>
					<Input id="itemCode" editable="false"></Input>
				</VBox>
				<VBox id="_IDGenVBox11">
					<Label id="_IDGenLabel21" text="Title"></Label>
					<Input id="titleUpdate" placeholder="Enter Book Title"></Input>
				</VBox>
				<VBox id="_IDGenVBox21">
					<Label id="_IDGenLabel31" text="Author"></Label>
					<Input id="authorUpdate" placeholder="Enter Author Name"></Input>
				</VBox>
				<VBox id="_IDGenVBox31">
					<Label id="_IDGenLabel41" text="Price"></Label>
					<Input id="priceUpdate" placeholder="Enter Book price"></Input>
				</VBox>
				</HBox>
				<HBox id="_IDGenHBox11">
				<VBox id="_IDGenVBox41">
					<Label id="_IDGenLabel51" text="Stock"></Label>
					<Input id="stockUpdate" placeholder="Enter Available Stock"></Input>
				</VBox>
				<VBox id="_IDGenVBox51">
					<Label id="_IDGenLabel61" text="Location"></Label>
					<Input id="locationUpdate" placeholder="Enter Book location"></Input>
				</VBox>
				<VBox id="_IDGenVBox61">
					<Label id="_IDGenLabel71" text="Genre"></Label>
					<Input id="genreUpdate" placeholder="Enter Genre"></Input>
				</VBox>
			</HBox>

			<HBox id="_IDGenHBox21">
				<VBox id="_IDGenVBox111" >
					<Button id="_IDGenButton11" text="Update" press="updateItem" ></Button>
				</VBox>
			</HBox>
    </Panel>

	<!-- Ending Panel 3 -->
<!-- panel 4 -->
